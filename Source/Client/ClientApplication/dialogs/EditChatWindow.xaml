<Window x:Class="ClientApplication.dialogs.EditChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApplication.dialogs"
        xmlns:user_controls="clr-namespace:ClientApplication.user_controls"
        mc:Ignorable="d"
        Title="EditChatWindow" Height="450" Width="250"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <user_controls:OnlineUsersView x:Name="uc_onlineUsers" Grid.Row="0" Margin="0,0,0,0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="bn_save" Content="Save" Width="125" Click="Bn_save_Click"/>
            <Button Name="bn_cancel" Content="Cancel" Width="125" Click="bn_cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
